{
    "Interface": {
        "Name": "fs",
        "Version": 1
    },

    "Types": [
        {
            "Name": "Path",
            "Fields": [
                "string(1024) Path"
            ]
        },
        {
            "Name": "DirectoryChild",
            "Fields": [
                "string(256) Name",
                "bool IsDirectory"
            ]
        },
        {
            "Name": "FileInfo",
            "Fields": [
                "string(256) Name",
                "u64 Size",
                "datetime CreatedAt"
            ]
        }
    ],

    "ClientToServerCalls": [
        {
            "Name": "DirectoryList",
            "Parameters": [
                "Path FullPath"
            ],
            "ReturnsList": true,
            "Returns": [
                "DirectoryChild Children"
            ]
        },
        {
            "Name": "FileInfo",
            "Parameters": [
                "Path FullPath"
            ],
            "Returns": [
                "FileInfo FileInfo"
            ]
        },
        {
            "Name": "FileRead",
            "Parameters": [
                "Path FullPath"
            ],
            "ReturnsList": true,
            "Returns": [
                "byte Contents[4096]"
            ]
        },
        {
            "Name": "FileCopy",
            "Parameters": [
                "Path SourceFullPath",
                "Path TargetFullPath"
            ]
        }
    ]
}
