{
    "Interface": {
        "Name": "fs",
        "Version": 1
    },

    "Types": [
        {
            "Name": "DirectoryChild",
            "Fields": [
                "string Name",
                "bool IsDirectory"
            ]
        }
    ],

    "ClientToServerCalls": [
        {
            "Name": "DirectoryList",
            "Parameters": [
                "string FullPath"
            ],
            "ReturnsType": "List",
            "Returns": [
                "DirectoryChild" // there is only one item allowed since ReturnsType = List
            ]
        },
        {
            "Name": "FileInfo",
            "Parameters": [
                "string FullPath"
            ],
            "Returns": [
                "string Name",
                "usize Size",
                "datetime CreatedAt"
            ]
        },
        {
            "Name": "FileRead",
            "Parameters": [
                "string FullPath"
            ],
            "ReturnsType": "List",
            "Returns": [
                "usize Bytes",
                "byte Contents[4096]"
            ]
        },
        {
            "Name": "FileCopy",
            "Parameters": [
                "string SourceFullPath",
                "string TargetFullPath"
            ]
        }
    ]
}
