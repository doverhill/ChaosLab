{
    "protocol": {
        "name": "tornado",
        "version": 1
    },

    "enums": {
        "ActionType": [ "Optional", "PrimarySafe", "Dangerous" ],
        "Severity": [ "Normal", "Information", "Warning", "Error" ],
        "SizeMode": [ "ContentMinimum", "ContentMaximum", "Fraction" ]
    },

    "types": {
        "Component": {
            "fields": {
                "component_id": {
                    "type": "u64"
                },
                "parent_component_id": {
                    "type": "u64"
                }
            }
        },
        "Window": {
            "inherits_from": "Component",
            "fields": {
                "title": {
                    "type": "string"
                }
            }
        },
        "VerticalLayout": {
            "inherits_from": "Component"
        },
        "HorizontalLayout": {
            "inherits_from": "Component"
        },
        "GridLayout": {
            "inherits_from": "Component"
        },
        "GridLayoutColumn": {
            "inherits_from": "Component",
            "fields": {
                "size_mode": {
                    "type": "SizeMode"
                },
                "fraction": {
                    "type": "u64"
                }
            }
        },
        "GridLayoutRow": {
            "inherits_from": "Component",
            "fields": {
                "size_mode": {
                    "type": "SizeMode"
                },
                "fraction": {
                    "type": "u64"
                }
            }
        },
        "Button": {
            "inherits_from": "Component",
            "fields": {
                "icon_name": {
                    "type": "string"
                },
                "text": {
                    "type": "string"
                }
            }
        }
    },

    "from_client": {
        "set_render_tree": {
            "type": "call",
            "parameters": {
                "components": {
                    "type": "Window|VerticalLayout|HorizontalLayout|GridLayout|GridLayoutColumn|GridLayoutRow|Button",
                    "array": true
                }
            }
        }
    },

    "from_server": {
        "component_clicked": {
            "type": "event",
            "parameters": {
                "component_id": {
                    "type": "u64"
                }
            }
        }
    }
}
