{
	"Interface": {
		"Name": "VFS",
		"Version": 1
	},

	// Types used
	"Types": [
		{
			"Name": "FileInfo",
			"Fields": [
				"string Filename",
				"string Fullpath"
			]
		}
	],

	// These are IPC calls from the client to the server
	"ClientToServerCalls": [
		{
			"Name": "ListFiles",
			"Parameters": [
				"string DirectoryPath",
				"bool Recursive"
			],
			"Returns": [
				"FileInfo[] Files"
			]
		},
		{
			"Name": "GetFileInfo",
			"Parameters": [
				"string FilePath"
			],
			"Returns": [
				"FileInfo File"
			]
		}
	],

	// These are IPC calls from the server to the client
	// Note that responses from the server to calls made by the client are defined in the Outbound section
	"ServerToClientCalls": [

	]
}