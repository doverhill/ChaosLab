{
    "protocol": {
        "name": "storage",
        "version": 1
    },

    "from_client": {
        "get_capabilities": {
            "type": "call",
            "returns": {
                "block_size": {
                    "type": "u64"
                }
            }
        },
        "read": {
            "type": "call",
            "parameters": {
                "block_index": {
                    "type": "u64"
                },
                "block_count": {
                    "type": "u64"
                }
            },
            "returns": {
                "data": {
                    "type": "u8",
                    "array": true
                }
            }
        },
        "write": {
            "type": "call",
            "parameters": {
                "block_index": {
                    "type": "u64"
                },
                "block_count": {
                    "type": "u64"
                },
                "data": {
                    "type": "u8",
                    "array": true
                }
            }
        }
    }
}